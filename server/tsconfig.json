{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationMap": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "transpileOnly": true,
    "typeCheck": false,
    "files": false
  },
  "include": [
    "./src/**/*"
  ],
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../network"
    }
  ]
}
