{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "declarationMap": false,
    "sourceMap": true,
    "declaration": false,
    "rootDir": "./src",
    "noEmitHelpers": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../network"
    }
  ]
}
